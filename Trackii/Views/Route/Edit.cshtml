@model Trackii.Models.Admin.User.UserEditVm
@{
    ViewData["Title"] = "Editar Usuario";
    var roles = ViewBag.Roles as List<(uint Id, string Name)> ?? new();
}

<div class="card">

    <div class="page-header">
        <div>
            <h2>Editar Usuario</h2>
            <p class="subtitle">Puedes cambiar rol/estado y (opcional) contraseña</p>
        </div>

        <a href="/Admin/User" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i>
            Volver
        </a>
    </div>

    <div asp-validation-summary="ModelOnly" class="field-error"></div>

    <!-- Nota: el action es la misma URL /Admin/User/Edit/{id} porque el controller usa [HttpPost("Edit/{id:long}")] -->
    <form method="post" class="form">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <div class="form-grid">

            <div class="form-field">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="input" />
                <span asp-validation-for="Username" class="field-error"></span>
            </div>

            <div class="form-field">
                <label>Rol</label>
                <select asp-for="RoleId" class="input">
                    @foreach (var r in roles)
                    {
                        if (r.Id == Model.RoleId)
                        {
                            <option value="@r.Id" selected="selected">@r.Name</option>
                        }
                        else
                        {
                            <option value="@r.Id">@r.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="RoleId" class="field-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Active">Activo</label>
                <label class="checkbox" style="gap:10px;">
                    @if (Model.Active)
                    {
                        <input asp-for="Active" type="checkbox" checked="checked" />
                    }
                    else
                    {
                        <input asp-for="Active" type="checkbox" />
                    }
                    <span class="muted">Permite acceso al sistema</span>
                </label>
            </div>

            <div class="form-field">
                <label asp-for="NewPassword">Nueva contraseña (opcional)</label>
                <input asp-for="NewPassword" type="password" class="input" />
                <span asp-validation-for="NewPassword" class="field-error"></span>
            </div>

        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Guardar
            </button>
            <a href="/Admin/User" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
