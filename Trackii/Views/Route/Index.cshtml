@model Trackii.Models.Admin.Route.RouteListVm

<h2>Gestión de Rutas</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Subfamilia</label>
                <select name="subfamilyId" class="form-select" onchange="this.form.submit()">
                    <option value="">-- Todas --</option>
                    @foreach (var s in ViewBag.Subfamilies as List<(uint Id, string Name)>)
                    {
                        if (Model.SubfamilyId == s.Id)
                        {
                            <option value="@s.Id" selected>@s.Name</option>
                        }
                        else
                        {
                            <option value="@s.Id">@s.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Buscar</label>
                <input type="text" name="search" class="form-control" value="@Model.Search" placeholder="Nombre o versión..." />
            </div>

            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="showInactive" value="true" id="chk" @(Model.ShowInactive ? "checked" : "") onchange="this.form.submit()">
                    <label class="form-check-label" for="chk">Ver Historial</label>
                </div>
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Filtrar</button>
                <a href="/Admin/Route" class="btn btn-secondary">Limpiar</a>
            </div>

            <div class="col-auto ms-auto">
                <a href="/Admin/Route/Create" class="btn btn-success">Nueva Ruta</a>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Subfamilia</th>
            <th>Nombre Ruta</th>
            <th>Versión</th>
            <th>Estado</th>
            <th>Flujo (Pasos)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr class="@(item.Active ? "table-success" : "")">
                <td>@item.Subfamily</td>
                <td>@item.Name</td>
                <td><span class="badge bg-secondary">@item.Version</span></td>
                <td>
                    @if (item.Active)
                    {
                        <span class="badge bg-success">ACTIVA</span>
                    }
                    else
                    {
                        <span class="badge bg-light text-dark">Histórico</span>
                    }
                </td>
                <td><small>@item.StepsSummary</small></td>
                <td>
                    <a href="/Admin/Route/Edit/@item.Id" class="btn btn-sm btn-warning">Editar / Ver</a>

                    @if (!item.Active)
                    {
                        <form action="/Admin/Route/Activate/@item.Id" method="post" style="display:inline" onsubmit="return confirm('¿Seguro que deseas activar esta versión antigua? La actual dejará de funcionar.');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-info">Restaurar (Activar)</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { subfamilyId = Model.SubfamilyId, search = Model.Search, showInactive = Model.ShowInactive, page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
}