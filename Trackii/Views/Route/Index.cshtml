@model Trackii.Models.Admin.Route.RouteListVm

@{
    ViewData["Title"] = "Routes";
    var subfamilies = ViewBag.Subfamilies as List<(uint Id, string Name)> ?? new();
}

<div class="card">

    <div class="page-header">
        <div>
            <h2>Routes</h2>
            <p class="subtitle">Gestión de rutas versionadas por Subfamily</p>
        </div>

        <a href="/Admin/Route/Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Nueva Ruta
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert error">
            <i class="fa-solid fa-triangle-exclamation"></i>
            @TempData["Error"]
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert success">
            <i class="fa-solid fa-circle-check"></i>
            @TempData["Success"]
        </div>
    }

    <form method="get" action="/Admin/Route" class="filters">

        <select name="subfamilyId" class="input" onchange="this.form.submit()">
            <option value="">Todas las subfamilies</option>
            @foreach (var s in subfamilies)
            {
                if (Model.SubfamilyId == s.Id)
                {
                    <option value="@s.Id" selected="selected">@s.Name</option>
                }
                else
                {
                    <option value="@s.Id">@s.Name</option>
                }
            }
        </select>

        <input type="text"
               name="search"
               value="@Model.Search"
               placeholder="Buscar (nombre o versión)..." />

        <label class="checkbox">
            @if (Model.ShowInactive)
            {
                <input type="checkbox" name="showInactive" value="true" checked="checked" onchange="this.form.submit()" />
            }
            else
            {
                <input type="checkbox" name="showInactive" value="true" onchange="this.form.submit()" />
            }
            Ver historial
        </label>

        <button type="submit" class="btn btn-secondary">Filtrar</button>
        <a href="/Admin/Route" class="btn btn-secondary">Limpiar</a>
    </form>

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>Subfamily</th>
                    <th>Nombre Ruta</th>
                    <th>Versión</th>
                    <th>Estado</th>
                    <th>Flujo</th>
                    <th class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="6" class="empty">No hay rutas registradas</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Subfamily</td>
                            <td>@item.Name</td>
                            <td><span class="badge info">@item.Version</span></td>
                            <td>
                                @if (item.Active)
                                {
                                    <span class="badge success">ACTIVA</span>
                                }
                                else
                                {
                                    <span class="badge">HISTÓRICO</span>
                                }
                            </td>
                            <td>
                                <small class="muted">@item.StepsSummary</small>
                            </td>
                            <td class="text-right">
                                <a href="/Admin/Route/Edit/@item.Id" class="btn-chip">
                                    <i class="fa-solid fa-pen"></i>
                                    Editar / Ver
                                </a>

                                @if (!item.Active)
                                {
                                    <form action="/Admin/Route/Activate/@item.Id"
                                          method="post"
                                          class="inline-form"
                                          onsubmit="return confirm('¿Seguro que deseas activar esta versión antigua? La actual dejará de funcionar.');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-chip success">
                                            <i class="fa-solid fa-rotate-left"></i>
                                            Restaurar
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="pager">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.Page)
                {
                    <span class="page current">@i</span>
                }
                else
                {
                    <a class="page" href="@Url.Action("Index", new { subfamilyId = Model.SubfamilyId, search = Model.Search, showInactive = Model.ShowInactive, page = i })">@i</a>
                }
            }
        </div>
    }
    else
    {
        <div class="pagination">Página @Model.Page de @Model.TotalPages</div>
    }

</div>
