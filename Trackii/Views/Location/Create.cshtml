@model Trackii.Models.Admin.Location.LocationEditVm
@{
    ViewData["Title"] = "Nueva Localidad";
}

<div class="card">
    <div class="page-header">
        <div>
            <h2>Nueva Localidad</h2>
            <p class="subtitle">Registra una nueva localidad de proceso</p>
        </div>

        <a href="/Admin/Location" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i>
            Volver
        </a>
    </div>

    <form method="post" action="/Admin/Location/Create" class="form">
        @Html.AntiForgeryToken()

        <div class="form-grid">
            <div class="form-field">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="input" placeholder="Ej. Ensamble / Inspección" />
                <span asp-validation-for="Name" class="field-error"></span>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Guardar
            </button>
            <a href="/Admin/Location" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
