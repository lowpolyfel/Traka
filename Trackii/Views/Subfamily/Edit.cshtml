@model Trackii.Models.Admin.Subfamily.SubfamilyEditVm

@{
    ViewData["Title"] = "Editar Subfamily";
    var families = ViewBag.Families as List<(uint Id, string Name)> ?? new();
}

<div class="card">

    <div class="page-header">
        <div>
            <h2>Editar Subfamily</h2>
            <p class="subtitle">Actualiza la family y/o el nombre</p>
        </div>

        <a href="/Admin/Subfamily" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i>
            Volver
        </a>
    </div>

    <form method="post" action="/Admin/Subfamily/Edit/@Model.Id" class="form">
        @Html.AntiForgeryToken()

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-grid">

            <div class="form-field">
                <label for="FamilyId">Family</label>
                <select id="FamilyId" name="FamilyId" class="input">
                    @foreach (var f in families)
                    {
                        if (Model.FamilyId == f.Id)
                        {
                            <option value="@f.Id" selected="selected">@f.Name</option>
                        }
                        else
                        {
                            <option value="@f.Id">@f.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="FamilyId" class="field-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="input" />
                <span asp-validation-for="Name" class="field-error"></span>
            </div>

        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Guardar
            </button>

            <a href="/Admin/Subfamily" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
