@model Trackii.Models.Admin.Subfamily.SubfamilyListVm

<h2>Gestión de Subfamilias</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-auto">
                <label class="form-label">Área</label>
                <select name="areaId" class="form-select" onchange="this.form.submit()">
                    <option value="">-- Todas --</option>
                    @foreach (var a in Model.Areas)
                    {
                        if (Model.AreaId == a.Id)
                        {
                            <option value="@a.Id" selected>@a.Name</option>
                        }
                        else
                        {
                            <option value="@a.Id">@a.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="col-auto">
                <label class="form-label">Familia</label>
                <select name="familyId" class="form-select" onchange="this.form.submit()">
                    <option value="">-- Todas --</option>
                    @foreach (var f in Model.Families)
                    {
                        if (Model.FamilyId == f.Id)
                        {
                            <option value="@f.Id" selected>@f.Name</option>
                        }
                        else
                        {
                            <option value="@f.Id">@f.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="col-auto">
                <label class="form-label">Buscar</label>
                <input type="text" name="search" class="form-control" value="@Model.Search" placeholder="Nombre..." />
            </div>

            <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="showInactive" value="true" id="chkInactive" @(Model.ShowInactive ? "checked" : "") onchange="this.form.submit()">
                    <label class="form-check-label" for="chkInactive">
                        Ver Inactivos
                    </label>
                </div>
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Filtrar</button>
                <a href="/Admin/Subfamily" class="btn btn-secondary">Limpiar</a>
            </div>

            <div class="col-auto ms-auto">
                <a href="/Admin/Subfamily/Create" class="btn btn-success">Nueva Subfamilia</a>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Área</th>
            <th>Familia</th>
            <th>Nombre</th>
            <th>Versión Ruta</th> <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.AreaName</td>
                <td>@r.FamilyName</td>
                <td>@r.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(r.ActiveRouteVersion) && r.ActiveRouteVersion != "-")
                    {
                        <span class="badge bg-info text-dark">v @r.ActiveRouteVersion</span>
                    }
                    else
                    {
                        <span class="text-muted">Sin ruta</span>
                    }
                </td>
                <td>
                    @if (r.Active)
                    {
                        <span class="badge bg-success">Sí</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">No</span>
                    }
                </td>
                <td>
                    <a href="/Admin/Subfamily/Edit/@r.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form method="post" action="/Admin/Subfamily/Toggle/@r.Id" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm @(r.Active ? "btn-danger" : "btn-success")">
                            @(r.Active ? "Desactivar" : "Activar")
                        </button>
                    </form>
                    <a href="/Admin/Route?subfamilyId=@r.Id" class="btn btn-sm btn-secondary" title="Ver Rutas">
                        <i class="bi bi-diagram-3"></i> Rutas
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.Page ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { 
                           areaId = Model.AreaId, 
                           familyId = Model.FamilyId, 
                           search = Model.Search, 
                           showInactive = Model.ShowInactive, 
                           page = i 
                       })">@i</a>
                </li>
            }
        </ul>
    </nav>
}