@model Trackii.Models.Admin.Subfamily.SubfamilyListVm

<h2>Subfamilias</h2>

<a href="/Admin/Subfamily/Create">Nuevo</a>

<table>
    <thead>
        <tr>
            <th>Área</th>
            <th>Familia</th>
            <th>Nombre</th>
            <th>Activo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Rows)
        {
            <tr>
                <td>@r.AreaName</td>
                <td>@r.FamilyName</td>
                <td>@r.Name</td>
                <td>@r.Active</td>
                <td>
                    <a href="/Admin/Subfamily/Edit/@r.Id">Editar</a>
                    <form method="post" action="/Admin/Subfamily/Toggle/@r.Id" style="display:inline">
                        <button type="submit">Activar/Desactivar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
