@model Trackii.Models.Admin.Area.AreaListVm

@{
    ViewData["Title"] = "Areas";
}

<div class="card">

    <!-- HEADER -->
    <div class="page-header">
        <div>
            <h2>Areas</h2>
            <p class="subtitle">Administración de áreas productivas</p>
        </div>

        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Nueva Area
        </a>
    </div>

    <!-- FILTERS -->
    <form method="get" class="filters">
        <input type="text"
               name="search"
               value="@Model.Search"
               placeholder="Buscar por nombre..." />

        <label class="checkbox">
            <input type="checkbox"
                   name="showInactive"
                   value="true"
                   @(Model.ShowInactive ? "checked" : "") />
            Mostrar inactivas
        </label>

        <button type="submit" class="btn btn-secondary">
            Filtrar
        </button>
    </form>

    <!-- TABLE -->
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Estado</th>
                    <th class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>

                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="3" class="empty">
                            No hay áreas registradas
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var row in Model.Items)
                    {
                        <tr>
                            <td>@row.Name</td>
                            <td>
                                @if (row.Active)
                                {
                                    <span class="badge success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge danger">Inactiva</span>
                                }
                            </td>
                            <td class="text-right">
                                <a asp-action="Edit"
                                   asp-route-id="@row.Id"
                                   class="btn-icon"
                                   title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>

                                <form action="/Admin/Area/Toggle" method="post" class="inline-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@row.Id" />
                                    <input type="hidden" name="active" value="@(row.Active ? 0 : 1)" />
                                    <button type="submit" class="btn-chip @(row.Active ? "danger" : "success")">
                                        @(row.Active ? "Desactivar" : "Activar")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    <div class="pagination">
        Página @Model.Page de @Model.TotalPages
    </div>

</div>
