@model Trackii.Models.Admin.Device.DeviceListVm

@{
    ViewData["Title"] = "Devices";
}

<div class="card">

    <div class="page-header">
        <div>
            <h2>Devices</h2>
            <p class="subtitle">Administración de dispositivos y sus ubicaciones</p>
        </div>

        <a href="/Admin/Device/Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Nuevo Device
        </a>
    </div>

    <form method="get" action="/Admin/Device" class="filters">
        <input type="text" name="search" value="@Model.Search" placeholder="Buscar por UID o nombre..." />

        <label class="checkbox">
            <input type="checkbox" name="showInactive" value="true" @(Model.ShowInactive ? "checked" : "") />
            Ver inactivos
        </label>

        <button type="submit" class="btn btn-secondary">Filtrar</button>
    </form>

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>UID</th>
                    <th>Nombre</th>
                    <th>Localidad</th>
                    <th>Estado</th>
                    <th class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="5" class="empty">No hay dispositivos registrados</td>
                    </tr>
                }
                else
                {
                    foreach (var row in Model.Items)
                    {
                        <tr>
                            <td>@row.DeviceUid</td>
                            <td>@(string.IsNullOrWhiteSpace(row.Name) ? "-" : row.Name)</td>
                            <td>@row.LocationName</td>
                            <td>
                                @if (row.Active)
                                {
                                    <span class="badge success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge danger">Inactivo</span>
                                }
                            </td>
                            <td class="text-right">
                                <a href="/Admin/Device/Edit/@row.Id" class="btn-icon" title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>

                                <form method="post" action="/Admin/Device/Toggle" class="inline-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@row.Id" />
                                    <input type="hidden" name="active" value="@(row.Active ? 0 : 1)" />
                                    <button type="submit" class="btn-chip @(row.Active ? "danger" : "success")">
                                        @(row.Active ? "Desactivar" : "Activar")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="pager">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.Page)
                {
                    <span class="page current">@i</span>
                }
                else
                {
                    <a class="page" href="/Admin/Device?page=@i&search=@Model.Search&showInactive=@(Model.ShowInactive ? "true" : "")">
                        @i
                    </a>
                }
            }
        </div>
    }
    else
    {
        <div class="pagination">
            Página @Model.Page de @Model.TotalPages
        </div>
    }
</div>
