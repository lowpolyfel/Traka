@model Trackii.Models.Admin.Role.RoleListVm

@{
    ViewData["Title"] = "Roles";
}

<div class="card">

    <div class="page-header">
        <div>
            <h2>Roles</h2>
            <p class="subtitle">Administración de roles y permisos</p>
        </div>

        <a href="/Admin/Role/Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Nuevo Rol
        </a>
    </div>

    <form method="get" action="/Admin/Role" class="filters">
        <input type="text" name="search" value="@Model.Search" placeholder="Buscar..." />

        <label class="checkbox">
            <input type="checkbox" name="showInactive" value="true" @(Model.ShowInactive ? "checked" : "") />
            Ver inactivos
        </label>

        <button type="submit" class="btn btn-secondary">Filtrar</button>
    </form>

    @if (TempData["Error"] != null)
    {
        <div class="alert error">
            <i class="fa-solid fa-circle-exclamation"></i>
            @TempData["Error"]
        </div>
    }

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Estado</th>
                    <th class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Items.Any())
                {
                    <tr>
                        <td colspan="3" class="empty">No hay roles registrados</td>
                    </tr>
                }
                else
                {
                    foreach (var r in Model.Items)
                    {
                        <tr>
                            <td>@r.Name</td>
                            <td>
                                @if (r.Active)
                                {
                                    <span class="badge success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge danger">Inactivo</span>
                                }
                            </td>
                            <td class="text-right">
                                <a href="/Admin/Role/Edit/@r.Id" class="btn-icon" title="Editar">
                                    <i class="fa-solid fa-pen"></i>
                                </a>

                                <form method="post" action="/Admin/Role/Toggle" class="inline-form">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <button type="submit" class="btn-chip @(r.Active ? "danger" : "success")">
                                        @(r.Active ? "Desactivar" : "Activar")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="pager">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.Page)
                {
                    <span class="page current">@i</span>
                }
                else
                {
                    <a class="page" href="/Admin/Role?page=@i&search=@Model.Search&showInactive=@(Model.ShowInactive ? "true" : "")">
                        @i
                    </a>
                }
            }
        </div>
    }
    else
    {
        <div class="pagination">
            Página @Model.Page de @Model.TotalPages
        </div>
    }
</div>
