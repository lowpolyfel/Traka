@model Trackii.Models.Admin.Product.ProductEditVm

@{
    ViewData["Title"] = "Editar Product";
    var subfamilies = ViewBag.Subfamilies as List<(uint Id, string Name)> ?? new();
}

<div class="card">

    <div class="page-header">
        <div>
            <h2>Editar Product</h2>
            <p class="subtitle">Actualiza la Subfamily y/o el Part Number</p>
        </div>

        <a href="/Admin/Product" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i>
            Volver
        </a>
    </div>

    <form method="post" action="/Admin/Product/Edit/@Model.Id" class="form">
        @Html.AntiForgeryToken()

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-grid">

            <div class="form-field">
                <label for="SubfamilyId">Subfamily</label>
                <select id="SubfamilyId" name="SubfamilyId" class="input">
                    @foreach (var s in subfamilies)
                    {
                        if (Model.SubfamilyId == s.Id)
                        {
                            <option value="@s.Id" selected="selected">@s.Name</option>
                        }
                        else
                        {
                            <option value="@s.Id">@s.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="SubfamilyId" class="field-error"></span>
            </div>

            <div class="form-field">
                <label asp-for="PartNumber"></label>
                <input asp-for="PartNumber" class="input" />
                <span asp-validation-for="PartNumber" class="field-error"></span>
            </div>

        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i>
                Guardar
            </button>

            <a href="/Admin/Product" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
