@using Microsoft.AspNetCore.Identity
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Trackii</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

</head>
<body>

    <div class="app-shell">

        <!-- SIDEBAR -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <span class="logo">Trackii</span>
            </div>

            <nav class="sidebar-nav">
                <a asp-controller="Lobby" asp-action="Index">
                    <i class="fa-solid fa-chart-line"></i>
                    <span>Lobby</span>
                </a>

                <a asp-controller="Area" asp-action="Index">
                    <i class="fa-solid fa-layer-group"></i>
                    <span>Areas</span>
                </a>

                <a asp-controller="Family" asp-action="Index">
                    <i class="fa-solid fa-diagram-project"></i>
                    <span>Families</span>
                </a>

                <a asp-controller="Subfamily" asp-action="Index">
                    <i class="fa-solid fa-sitemap"></i>
                    <span>Subfamilies</span>
                </a>

                <a asp-controller="Product" asp-action="Index">
                    <i class="fa-solid fa-box"></i>
                    <span>Products</span>
                </a>

                <a asp-controller="Route" asp-action="Index">
                    <i class="fa-solid fa-route"></i>
                    <span>Routes</span>
                </a>

                <a asp-controller="User" asp-action="Index">
                    <i class="fa-solid fa-users"></i>
                    <span>Users</span>
                </a>

                <a asp-controller="Location" asp-action="Index">
                    <i class="fa-solid fa-location-dot"></i>
                    <span>Localidades</span>
                </a>

                <a asp-controller="Role" asp-action="Index">
                    <i class="fa-solid fa-user-shield"></i>
                    <span>Roles</span>
                </a>
            </nav>
        </aside>

        <!-- MAIN -->
        <div class="main">

            <!-- HEADER -->
            <header class="topbar">
                <div class="topbar-left">
                    @ViewData["Title"]
                </div>

                <div class="topbar-right">
                    <span class="user">
                        <i class="fa-solid fa-user"></i>
                        @HttpContextAccessor.HttpContext?.User?.Identity?.Name
                    </span>

                    <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="logout">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            Logout
                        </button>
                    </form>
                </div>
            </header>

            <!-- CONTENT -->
            <main class="content">
                @RenderBody()
            </main>

        </div>
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>
